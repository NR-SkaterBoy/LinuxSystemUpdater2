{
    "name": "linux-system-updater",
    "version": "1.0.0",
    "description": "Updater for linux systems",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "watch": "nodemon --exec electron ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NR-SkaterBoy/LinuxSystemUpdater2.git"
    },
    "keywords": [
        "linux",
        "debian",
        "update",
        "system",
        "system updater"
    ],
    "author": {
        "name": "NR-SkaterBoy",
        "email": "nr.rick.dev@gmail.com"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "^24.1.3",
        "electron-builder": "^23.6.0",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-updater": "^5.3.0",
        "nodemon": "^2.0.22"
    },
    "dependencies": {
        "bootstrap": "^5.3.0-alpha1",
        "bootstrap-icons": "^1.10.3",
        "dns": "^0.2.2",
        "electron-menu": "^1.0.0",
        "electron-notifications": "^1.0.0",
        "electron-updater": "^5.3.0",
        "internet-available": "^1.0.0",
        "logger": "^0.0.1",
        "os-utils": "^0.0.14",
        "update-electron-app": "^2.0.1",
        "winston": "^3.8.2"
    },
    "bugs": {
        "url": "https://github.com/NR-SkaterBoy/LinuxSystemUpdater2/issues"
    },
    "homepage": "https://github.com/NR-SkaterBoy/LinuxSystemUpdater2#readme",
    "build": {
        "appId": "com.utilities.linuxsystemupdater",
        "productName": "Linux System Updater",
        "icon": "src/icon.png",
        "extraFiles": [
            "src/**"
        ],
        "directories": {
            "output": "dist"
        },
        "publish": [
            {
                "provider": "github"
            }
        ],
        "linux": {
            "target": "deb",
            "category": "Utility",
            "icon": "src/icon.png",
            "executableName": "linuxsystemupdater"
        }
    }
}